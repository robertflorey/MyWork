@model HRPortal.Models.PolicyVM
@{
    ViewBag.Title = "AddPolicy";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Add Policy</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                      @Html.ValidationSummary()
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Policy Details</h4>
                                </div>
                                <div class="form-group">
                                    <label>Category:</label>
                                    @Html.DropDownListFor(p => p.Policy.Category.CategoryId, Model.CategoryItems, new { @class = "form-control" })
                                </div>
                                <h4>Or</h4>
                                <div class="form-group">
                                    <label>Create New Category</label>
                                    @Html.TextBoxFor(p => p.Policy.Category.CategoryName, new { @class = "form-control" })
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>Title:</label>
                                        @Html.TextBoxFor(p => p.Policy.PolicyTitle, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Content:</label>
                                        @Html.TextAreaFor(p => p.Policy.PolicyContent, new { @class = "form-control" })
                                    </div>                                  
                                    <button class="btn btn-primary" style="background-color:green">Save</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>    
}

